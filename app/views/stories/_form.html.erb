<%= render "layouts/errors", :object => @story %>

<div class="row">
  <div class="col-sm-8 well">
    <%= form_for @story do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :genre %>
        <%= f.text_field :genre, :class => "form-control" %>
      </div>
      <%= f.submit "Create Story", :class => "btn btn-success" %>
    <% end %>
  </div>
</div>
