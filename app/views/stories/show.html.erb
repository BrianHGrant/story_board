<h1><%= @story.title %></h1>
<p>
  <% @contributions.each do |contrib| %>
    <%= link_to contrib.content, story_contribution_path(@story, contrib)%>
  <% end %>
</p>

<p><%= link_to "Contribute to Story", new_story_contribution_path(@story) %></p>

<p><%= link_to "Edit", edit_story_path(@story) %></p>
<p><%= link_to "Delete", story_path(@story), :data => {:confirm => "You sure?", :method => "delete"} %></p>



<%= link_to "Return to Stories", stories_path %>
